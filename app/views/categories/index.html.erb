<h2 class="first">All Categories</h2>
<table>
<% @categories.each do |category| %>
<tr>
  <td>
   <%= link_to category.title, category_path(category)%>
 </td>
 <td><%= link_to "Edit", edit_category_path(category)%></td>
  <td><%= button_to "Delete", category_path(category), method: :delete %></td>
</tr>
<% end %>
</table>
<br>

<%= button_to "Add new category", new_category_path, method: "get"%>
